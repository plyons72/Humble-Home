#define MINUTE [number of milliseconds in a scaled minute]void setup() {  Serial.begin(9600);    // Set mode for all pins used for output  pinMode([pin number], OUTPUT);}void loop() {  on([pin number], "Microwave");  delay([number of minutes to leave on] * MINUTE);  off([pin number], "Microwave");}void on(int pin, char* device) {  digitalWrite(pin, HIGH);  printCurrentTime();  Serial.print(device);  Serial.print(" is on");}void off(int pin, char* device) {  digitalWrite(pin, LOW);  printCurrentTime();  Serial.print(device);  Serial.print(" is off");  }void printCurrentTime() {  int totalMinutes = millis() / MINUTE;  int hours = totalMinutes / 60;  int minutes = totalMinutes % 60;  Serial.print(" [");  if (hours < 10) Serial.print(0);  Serial.print(hours);  Serial.print(":");  if (minutes < 10) Serial.println(0);  Serial.print(minutes);  Serial.print("] ");}